@model KQuotesNovels.ViewModels.NovelFormVM

<h2>Edit Novel</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="NovelId" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Author</label>
        <select asp-for="AuthorId" class="form-select"
                asp-items="@(new SelectList(Model.AllAuthors, "AuthorId", "Name", Model.AuthorId))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Genres (multi-select)</label>
        <select asp-for="SelectedGenreIds" multiple class="form-select"
                asp-items="@(new MultiSelectList(Model.AllGenres, "GenreId", "Name", Model.SelectedGenreIds))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Dramas (multi-select)</label>
        <select asp-for="SelectedDramaIds" multiple class="form-select"
                asp-items="@(new MultiSelectList(Model.AllDramas, "DramaId", "Title", Model.SelectedDramaIds))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Cover Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
    {
        <div class="mb-3">
            <p>Current Cover:</p>
            <img src="@Url.Content(Model.ExistingImagePath)" alt="Novel Cover" style="max-width:200px;" />
        </div>
    }

    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
