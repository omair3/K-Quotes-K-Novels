@model Quote
<h2>Quote Details</h2>
<dl class="row">
  <dt class="col-sm-2">ID</dt><dd class="col-sm-10">@Model.QuoteId</dd>
  <dt class="col-sm-2">Text</dt><dd class="col-sm-10">"@Model.Text"</dd>
  <dt class="col-sm-2">Drama</dt><dd class="col-sm-10">@Model.Drama?.Title</dd>
</dl>
<h4>Moods</h4>
<ul>
  @foreach (var m in Model.QuoteMoods.Select(qm => qm.Mood)) {
    <li>@m!.Name
      <form method="post" asp-action="RemoveMood" class="d-inline">
        <input type="hidden" name="id" value="@Model.QuoteId" />
        <input type="hidden" name="moodId" value="@m.MoodId" />
        <button class="btn btn-sm btn-outline-danger">remove</button>
      </form>
    </li>
  }
</ul>
<form method="post" asp-action="AddMood" class="d-flex gap-2">
  <input type="hidden" name="id" value="@Model.QuoteId" />
  <select name="moodId" class="form-select" asp-items="ViewBag.MoodId"></select>
  <button class="btn btn-sm btn-primary">Add</button>
</form>
<a class="btn btn-secondary mt-3" asp-action="Index">Back</a>

