@model IEnumerable<Quote>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Quotes</h2>
  <a class="btn btn-primary" asp-action="Create">Create</a>
</div>
<table class="table table-striped">
  <thead><tr><th>ID</th><th>Text</th><th>Drama</th><th></th></tr></thead>
  <tbody>
@foreach (var item in Model) {
  <tr>
    <td>@item.QuoteId</td>
    <td>@item.Text</td>
    <td>@item.Drama?.Title</td>
    <td>
      <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.QuoteId">Details</a>
      <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.QuoteId">Edit</a>
      <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.QuoteId">Delete</a>
    </td>
  </tr>
}
  </tbody>
</table>

