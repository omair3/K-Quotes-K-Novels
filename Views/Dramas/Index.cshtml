@model IEnumerable<KQuotesNovels.Models.Drama>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Dramas</h2>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Poster</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DramaId</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Poster" style="max-width:80px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@item.Title</td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.DramaId">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.DramaId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.DramaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
