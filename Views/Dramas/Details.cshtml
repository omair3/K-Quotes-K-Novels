@model KQuotesNovels.Models.Drama

<h2>Drama Details</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.DramaId</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Poster</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Poster" style="max-width:200px;" />
        }
        else
        {
            <span class="text-muted">No image</span>
        }
    </dd>
</dl>

<a class="btn btn-secondary" asp-action="Index">Back</a>
