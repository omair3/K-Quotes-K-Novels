@model Author
<h2>Author Details</h2>
<dl class="row">
  <dt class="col-sm-2">ID</dt><dd class="col-sm-10">@Model.AuthorId</dd>
  <dt class="col-sm-2">Name</dt><dd class="col-sm-10">@Model.Name</dd>
</dl>
<h4>Novels</h4>
<ul>
  @foreach (var n in Model.Novels) { <li>@n.Title</li> }
</ul>
<a class="btn btn-secondary" asp-action="Index">Back</a>

