@model IEnumerable<Author>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Authors</h2>
  <a class="btn btn-primary" asp-action="Create">Create</a>
</div>
<table class="table table-striped">
  <thead><tr><th>ID</th><th>Name</th><th>Novels</th><th></th></tr></thead>
  <tbody>
@foreach (var item in Model) {
  <tr>
    <td>@item.AuthorId</td>
    <td>@item.Name</td>
    <td>@item.Novels.Count</td>
    <td>
      <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.AuthorId">Details</a>
      <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a>
      <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
    </td>
  </tr>
}
  </tbody>
</table>

